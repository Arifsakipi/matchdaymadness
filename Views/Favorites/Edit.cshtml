@model MatchdayMadness2.Models.Favorites

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Favorites</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="Teamsid" class="control-label"></label>
                @Html.DropDownListFor(model => model.Teamsid, (SelectList)ViewBag.Teams, new { @class = "form-control" })
                <span asp-validation-for="Teamsid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayersID" class="control-label"></label>
                @Html.DropDownListFor(model => model.PlayersID, (SelectList)ViewBag.Players, new { @class = "form-control" })
                <span asp-validation-for="PlayersID" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
